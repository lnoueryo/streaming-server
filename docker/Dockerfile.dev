# ===== Go Dev Stage (with Hot Reload) =====
FROM golang:1.24-alpine

RUN apk add --no-cache git bash curl

WORKDIR /app

# Hot reload tool
RUN go install github.com/cosmtrek/air@latest

# 依存はキャッシュさせたいので go.mod だけ先にコピー
COPY go.mod go.sum ./
RUN go mod download

# 実行時は compose のバインドマウントで上書きされる
COPY . .

EXPOSE 8080
CMD ["air", "-c", ".air.toml"]